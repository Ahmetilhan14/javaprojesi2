<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.shape.*?>
<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="edu.erciyes.javafex.CarController"
            prefWidth="1600.0" prefHeight="1600.0">

    <!-- Üst kısım: Kontroller -->
    <top>
        <HBox spacing="20" alignment="TOP_CENTER" BorderPane.alignment="CENTER">
            <VBox spacing="5" alignment="CENTER">
                <Label text="Doğu"/>
                <ComboBox fx:id="EastVehicleCount" prefWidth="100"/>
            </VBox>
            <VBox spacing="5" alignment="CENTER">
                <Label text="Batı"/>
                <ComboBox fx:id="WestVehicleCount" prefWidth="100"/>
            </VBox>
            <VBox spacing="5" alignment="CENTER">
                <Label text="Kuzey"/>
                <ComboBox fx:id="NorthVehicleCount" prefWidth="100"/>
            </VBox>
            <VBox spacing="5" alignment="CENTER">
                <Label text="Güney"/>
                <ComboBox fx:id="SouthVehicleCount" prefWidth="100"/>
            </VBox>
            <VBox spacing="5" alignment="CENTER">
                <Label text="Seçilen Sayıda Üret"/>
                <Button text="Üret" onMouseClicked="#secHandler"/>
            </VBox>
            <VBox spacing="5" alignment="CENTER">
                <Label text="Rastgele Üret"/>
                <Button text="Üret" onMouseClicked="#rndHandler"/>
            </VBox>
            <VBox spacing="5" alignment="CENTER">
                <Label fx:id="errorMessageLabel" text="" textFill="red"/>
            </VBox>
        </HBox>
    </top>


    <!-- Alt kısım: Paneller -->
    <bottom>
        <VBox spacing="10">
            <HBox alignment="BOTTOM_CENTER" prefWidth="400" spacing="5">
                <HBox prefWidth="210" prefHeight="300" alignment="BOTTOM_LEFT">
                    <VBox alignment="BOTTOM_CENTER" prefWidth="40" maxHeight="80" spacing="5"
                          style="-fx-border-color: orange; -fx-border-width: 1; -fx-border-radius: 5; -fx-padding: 2">
                        <Circle fx:id="north_red" radius="10" fill="RED"/>
                        <Circle fx:id="north_yellow" radius="10" fill="GRAY"/>
                        <Circle fx:id="north_green" radius="10" fill="GRAY"/>
                    </VBox>
                    <VBox>
                        <Pane fx:id="northPane" prefHeight="300" prefWidth="100"
                              style="-fx-background-color: red;"/>
                    </VBox>
                </HBox>
            </HBox>


            <HBox spacing="20" alignment="CENTER">
                <VBox prefHeight="190" prefWidth="300" alignment="BOTTOM_RIGHT">
                    <HBox>
                        <Pane fx:id="westPane" prefHeight="100" prefWidth="300"
                              style="-fx-border-color: black; -fx-background-color: orange;"/>
                    </HBox>
                    <HBox alignment="CENTER" maxWidth="80" prefHeight="40" spacing="5"
                          style="-fx-border-color: orange; -fx-border-width: 1; -fx-border-radius: 5; -fx-padding: 2">
                        <Circle fx:id="west_red" radius="10" fill="RED"/>
                        <Circle fx:id="west_yellow" radius="10" fill="GRAY"/>
                        <Circle fx:id="west_green" radius="10" fill="GRAY"/>
                    </HBox>

                </VBox>

                <Pane prefHeight="50" prefWidth="200"/>

                <VBox alignment="TOP_LEFT" prefWidth="300" prefHeight="190">
                    <HBox alignment="CENTER" maxWidth="80" prefHeight="40" spacing="5"
                          style="-fx-border-color: orange; -fx-border-width: 1; -fx-border-radius: 5; -fx-padding: 2">
                        <Circle fx:id="east_red" radius="10" fill="RED"/>
                        <Circle fx:id="east_yellow" radius="10" fill="GRAY"/>
                        <Circle fx:id="east_green" radius="10" fill="GRAY"/>
                    </HBox>
                    <HBox>
                        <Pane fx:id="eastPane" prefHeight="100" prefWidth="300"
                              style="-fx-border-color: black; -fx-background-color: green;"/>
                    </HBox>
                </VBox>

            </HBox>


            <HBox alignment="TOP_CENTER">
                <VBox>
                <Pane fx:id="southPane" prefHeight="300" prefWidth="100"
                      style="-fx-border-color: black; -fx-background-color: yellow;"/>
                </VBox>
                <VBox alignment="BOTTOM_RIGHT" spacing="5" style="-fx-border-color: orange; -fx-border-width: 1; -fx-border-radius: 5; -fx-max-height: 3; -fx-padding: 2">
                    <Circle fx:id="south_red" radius="10" fill="RED"/>
                    <Circle fx:id="south_yellow" radius="10" fill="GRAY"/>
                    <Circle fx:id="south_green" radius="10" fill="GRAY"/>
                </VBox>
            </HBox>
        </VBox>
    </bottom>

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

</BorderPane>
