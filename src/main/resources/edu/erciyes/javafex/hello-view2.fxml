<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.BorderPane?>

<VBox alignment="BASELINE_LEFT" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="edu.erciyes.javafex.HelloController2"
      prefWidth="1600.0" prefHeight="1600.0">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <HBox spacing="20" alignment="TOP_CENTER">
        <VBox spacing="5" alignment="CENTER">
            <Label text="Doğu"/>
            <ComboBox fx:id="EastVehicleCount" prefWidth="100" />
        </VBox>
        <VBox spacing="5" alignment="CENTER">
            <Label text="Batı"/>
            <ComboBox fx:id="WestVehicleCount" prefWidth="100" />
        </VBox>
        <VBox spacing="5" alignment="CENTER">
            <Label text="Kuzey"/>
            <ComboBox fx:id="NorthVehicleCount" prefWidth="100" />
        </VBox>
        <VBox spacing="5" alignment="CENTER">
            <Label text="Güney"/>
            <ComboBox fx:id="SouthVehicleCount" prefWidth="100" />
        </VBox>
        <VBox spacing="5" alignment="CENTER" >
            <Label text="Seçilen Sayıda Üret"/>
            <Button text="Üret" alignment="TOP_CENTER" onMouseClicked="#secHandler"/>
        </VBox>

        <VBox spacing="5" alignment="CENTER">
            <Label text="Rastgele Üret"/>
            <Button text="Üret" alignment="TOP_CENTER" onMouseClicked="#rndHandler"/>
        </VBox>

        <VBox spacing="5" alignment="CENTER">
            <Label fx:id="errorMessageLabel" text="" textFill="red" />
        </VBox>
    </HBox>

    <HBox alignment="TOP_CENTER">
        <Pane fx:id="northPane" prefHeight="300" prefWidth="100" style="-fx-border-color: black; -fx-background-color: red;" />
    </HBox>
    <HBox spacing="20" alignment="TOP_CENTER">
        <VBox  alignment="TOP_RIGHT">
            <Pane  fx:id="westPane" prefHeight="100" prefWidth="300" style="-fx-border-color: black; -fx-background-color: orange;" />
        </VBox>
        <VBox  alignment="TOP_CENTER">
            <Pane prefHeight="50" prefWidth="150"/>
        </VBox>
        <VBox  alignment="TOP_LEFT" >
            <Pane fx:id="eastPane" prefWidth="300" prefHeight="100" style="-fx-border-color: black; -fx-background-color: green;"  />
        </VBox>
    </HBox>
    <HBox alignment="TOP_CENTER">
        <Pane fx:id="southPane" prefWidth="100" prefHeight="300" style="-fx-border-color: black; -fx-background-color: yellow;" />
    </HBox>
</VBox>
